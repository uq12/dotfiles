# Default config for sway
#
# Скопируйте это в ~/.config/sway/config и отредактируйте по своему вкусу.
#
# Прочтите `man 5 sway` для полной справки.

#styles - установите папку для файла определения вашей темы
set $theme /usr/share/sway/themes/matcha-green

# переменные темы
include $theme/definitions

# глобальные переменные
include /etc/sway/definitions

# пользовательские переменные
include $HOME/.config/sway/definitions.d/*.conf

include /etc/sway/inputs/*
include /etc/sway/outputs/*

# включить режимы
include /etc/sway/modes/*

# включите это только в том случае, если каждое используемое вами приложение совместимо с wayland
# xwayland disable

# включить дополнительные конфигурации, например. для автозапуска приложений
include /etc/sway/config.d/*

# конфиг пользователя
include $HOME/.config/sway/config.d/*.conf
